<?xml version="1.0"?>
<widgets>
    <webmasterei_popup type="magepopups/popup" translate="Exit Intent" module="magepopups">
        <name>Webmasterei Popup</name>
        <description>A popup, showing when widget conditions are met.</description>
        <parameters>
            <trigger>
                <label>Trigger Event</label>
                <description>Event that triggers the Popup</description>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <values>
                    <exitintent>
                        <value>exitintent</value>
                        <label>Exit intent</label>
                    </exitintent>
                    <inactivity>
                        <value>inactivity</value>
                        <label>Inactivity on Site</label>
                    </inactivity>
                    <scrolldepth>
                        <value>scrolldepth</value>
                        <label>Scrolltiefe des Browsers</label>
                    </scrolldepth>
                    <timeonpage>
                        <value>timeonpage</value>
                        <label>Time of Pagevisit</label>
                    </timeonpage>
                </values>
            </trigger>
            <exitintent_delay>
                <label>Exit intent delay</label>
                <description>Set the Delay Time for exit intent in Millisecons</description>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>200</value>
                <depends>
                    <trigger>
                        <value>exitintent</value>
                    </trigger>
                </depends>
            </exitintent_delay>
            <inactivity_delay>
                <label>Time of inactivity</label>
                <description>Time the user is idle in seconds.</description>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>15</value>
                <depends>
                    <trigger>
                        <value>inactivity</value>
                    </trigger>
                </depends>
            </inactivity_delay>
            <scrolldepth>
                <label>Scroll depth in percent (%)</label>
                <description>Set a scrolldepth until Widget starts appearing.</description>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <values>
                    <percent25>
                        <value>25%</value>
                        <label>25%</label>
                    </percent25>
                    <percent50>
                        <value>50%</value>
                        <label>50%</label>
                    </percent50>
                    <percent75>
                        <value>75%</value>
                        <label>75%</label>
                    </percent75>
                    <percent100>
                        <value>100%</value>
                        <label>100%</label>
                    </percent100>
                </values>
                <depends>
                    <trigger>
                        <value>scrolldepth</value>
                    </trigger>
                </depends>
            </scrolldepth>
            <timeonpage>
                <label>Time on Page</label>
                <description>Event fires if user is X seconds on page.</description>
                <visible>1</visible>
                <type>text</type>
                <value>20</value>
                <depends>
                    <trigger>
                        <value>timeonpage</value>
                    </trigger>
                </depends>
            </timeonpage>
            <title>
                <label>Titel</label>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
            </title>
            <message>
                <label>Message</label>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
            </message>
            <coupon>
                <label>Coupon yes/no</label>
                <description>Set if you need a Coupon</description>
                <visible>1</visible>
                <type>select</type>
                <value>0</value>
                <values>
                    <no>
                        <label>No</label>
                        <value>0</value>
                    </no>
                    <yes>
                        <label>Yes</label>
                        <value>1</value>
                    </yes>

                </values>
            </coupon>
            <coupon_code>
                <label>Coupon Code</label>
                <description>If you are offering a coupon, place the Code here.</description>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <depends>
                    <coupon><value>1</value></coupon>
                </depends>
            </coupon_code>
            <subscription>
                <label>Subscription yes/no</label>
                <description>Set if you need a Coupon</description>
                <visible>1</visible>
                <type>select</type>
                <value>0</value>
                <values>
                    <no>
                        <label>No</label>
                        <value>0</value>
                    </no>
                    <yes>
                        <label>Yes</label>
                        <value>1</value>
                    </yes>
                </values>
            </subscription>
            <subscription_provider>
                <label>Provider</label>
                <description>Select the Mailform you want to use.</description>
                <visible>1</visible>
                <type>select</type>
                <value>magento</value>
                <values>
                    <no>
                        <label>Magento</label>
                        <value>magento</value>
                    </no>
                    <yes>
                        <label>Cleverreach</label>
                        <value>cleverreach</value>
                    </yes>
                </values>
                <depends>
                    <subscription><value>1</value></subscription>
                </depends>
            </subscription_provider>
            <subscription_link>
                <label>Newsletter Subscription</label>
                <label>Set a newsletter Subscription "action" link to the form. Leave Blank to use Magento's Newsletter List.</label>
                <visible>1</visible>
                <type>text</type>
                <depends>
                    <subscription><value>1</value></subscription>
                </depends>
            </subscription_link>
            <button>
                <label>Button yes/no</label>
                <description>Set if you need a Button</description>
                <visible>1</visible>
                <type>select</type>
                <value>0</value>
                <values>
                    <no>
                        <label>No</label>
                        <value>0</value>
                    </no>
                    <yes>
                        <label>Yes</label>
                        <value>1</value>
                    </yes>
                </values>
            </button>
            <button_text>
                <label>Button Text</label>
                <description>text of the Button here.</description>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <depends>
                    <button><value>1</value></button>
                </depends>
            </button_text>
            <button_link>
                <label>Button Link</label>
                <description>If you have a button, place the Text here.</description>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <depends>
                    <button><value>1</value></button>
                </depends>
            </button_link>
            <cmsblock_yesno>
                <label>Show CMS Block yes/no</label>
                <description>If set, the CMS Block below is used.</description>
                <visible>1</visible>
                <type>select</type>
                <value>0</value>
                <values>
                    <no>
                        <label>No</label>
                        <value>0</value>
                    </no>
                    <yes>
                        <label>Yes</label>
                        <value>1</value>
                    </yes>
                </values>
            </cmsblock_yesno>
            <cmsblock type="complex" translate="cmsblock">
                <label>CMS Block</label>
                <desciption>If you choose that, no other content from this widget will be shown.</desciption>
                <visible>1</visible>
                <required>0</required>
                <type>label</type>
                <depends>
                    <cmsblock_yesno><value>1</value></cmsblock_yesno>
                </depends>
                <helper_block>
                    <type>adminhtml/cms_block_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Block...</open>
                        </button>
                    </data>
                </helper_block>
            </cmsblock>
            <help>
                <label>Hilfe Block</label>
                <description>Choosing this, the whole thing becomes a help-block</description>
                <visible>1</visible>
                <type>select</type>
                <value>0</value>
                <values>
                    <no>
                        <label>No</label>
                        <value>0</value>
                    </no>
                    <yes>
                        <label>Yes</label>
                        <value>1</value>
                    </yes>
                </values>
            </help>
            <phone>
                <label>Phone</label>
                <description>Set you phone Number</description>
                <visible>1</visible>
                <type>text</type>
                <depends>
                    <help><value>1</value></help>
                </depends>
            </phone>
            <email>
                <label>E-Mail</label>
                <description>Set you phone E-Mail</description>
                <visible>1</visible>
                <type>text</type>
                <depends>
                    <help><value>1</value></help>
                </depends>
            </email>
            <chat>
                <label>Chat</label>
                <description>Set a Link to a chat-Popup</description>
                <visible>1</visible>
                <type>text</type>
                <depends>
                    <help><value>1</value></help>
                </depends>
            </chat>
            <skype>
                <label>Skype</label>
                <description>Set your Skype Name</description>
                <visible>1</visible>
                <type>text</type>
                <depends>
                    <help><value>1</value></help>
                </depends>
            </skype>
            <whatsapp>
                <label>Whatsapp</label>
                <description>Set your WhatsApp Account</description>
                <visible>1</visible>
                <type>text</type>
                <depends>
                    <help><value>1</value></help>
                </depends>
            </whatsapp>
            <template translate="label">
                <label>Template</label>
                <visible>0</visible>
                <type>select</type>
                <value>webmasterei/magepopups/Popup.phtml</value>
            </template>
        </parameters>
    </webmasterei_popup>
</widgets>